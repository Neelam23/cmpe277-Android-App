<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.affectiva.app" >

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        tools:replace="android:allowBackup,android:label"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Dope"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name = "com.affectiva.app.HttpHandler">

        <activity android:name="com.affectiva.app.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.affectiva.app.MainActivity"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="Dope" >
        </activity>
        <activity
            android:name="com.affectiva.app.LoadStoryDetails"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="Dope" >
        </activity>
        <activity
            android:name="com.affectiva.app.StoryList"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:label="Dope" >
        </activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
